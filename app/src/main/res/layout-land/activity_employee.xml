<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    style="@style/CrynetContainer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CrynetTitle"
                android:gravity="fill_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_zone"
                    style="@style/crynetLabelEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0"
                    android:paddingTop="10dp"
                    android:text="@string/lblZona" />

                <TextView
                    android:id="@+id/txt_zone"
                    style="@style/crynetLabelEmployee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="K1:1"
                    android:textSize="36sp"
                    tools:ignore="HardcodedText" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:background="@drawable/logo_blanco_alpha"
                    android:contentDescription="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/CrynetSubcontainer"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:id="@+id/img_fotoEmpleado"
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:contentDescription="@string/empleadoImageDesc"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/txt_empNo"
                        style="@style/crynetLabelEmployee"
                        android:text="@string/tempEmpNo"
                        android:textAlignment="center"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lbl_title"
                        style="@style/crynetLabelEmployee.Label"
                        android:text="@string/lblTitle" />

                    <TextView
                        android:id="@+id/txt_title"
                        style="@style/crynetLabelEmployee"
                        android:text="@string/tempTextShort" />

                    <TextView
                        android:id="@+id/lbl_paygrade"
                        style="@style/crynetLabelEmployee.Label"
                        android:text="@string/lblPayGrade" />

                    <TextView
                        android:id="@+id/txt_paygrade"
                        style="@style/crynetLabelEmployee"
                        android:text="@string/tempTextShort" />

                    <TextView
                        android:id="@+id/lbl_location"
                        style="@style/crynetLabelEmployee.Label"
                        android:text="@string/lblLocation" />

                    <TextView
                        android:id="@+id/txt_location"
                        style="@style/crynetLabelEmployee"
                        android:text="@string/tempTextShort" />

                    <TextView
                        android:id="@+id/lbl_rank"
                        style="@style/crynetLabelEmployee.Label"
                        android:text="@string/lblRank" />

                    <TextView
                        android:id="@+id/txt_rank"
                        style="@style/crynetLabelEmployee"
                        android:text="@string/tempTextShort" />

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


<!--
                        <ImageView
                            android:id="@+id/img_QR"
                            android:layout_width="220dp"
                            android:layout_height="80dp"
                            android:contentDescription="@string/QRCodeDesc"
                            android:scaleType="fitXY"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />
                        -->
                        <TextView
                            android:id="@+id/txt_dept"
                            style="@style/crynetLabelEmployee"
                            android:layout_width="wrap_content"
                            android:text="@string/tempTextShort" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/img_dept"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:contentDescription="@string/deptIconDesc"
                            tools:srcCompat="@tools:sample/avatars" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
